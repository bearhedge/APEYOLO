# APEYOLO Production Environment Variables
# DO NOT commit actual secrets to version control

# Environment
NODE_ENV=production
PORT=8080

# IBKR Configuration
BROKER_PROVIDER=ibkr
IBKR_ENV=paper
IBKR_CLIENT_ID=BearHedge-Paper
IBKR_CLIENT_KEY_ID=main
IBKR_PRIVATE_KEY="<stored-in-secret-manager>"
IBKR_CREDENTIAL=<your-ibkr-credential>
IBKR_ALLOWED_IP=<your-gcp-vm-ip>
IBKR_SCOPE=sso-sessions.write
IBKR_ACCOUNT_ID=<your-ibkr-account>
IBKR_BASE_URL=https://api.ibkr.com

# Google OAuth Configuration
# Store these in GCP Secret Manager
GOOGLE_CLIENT_ID=<stored-in-secret-manager>
GOOGLE_CLIENT_SECRET=<stored-in-secret-manager>
GOOGLE_REDIRECT_URI=https://apeyolo.com/api/auth/google/callback

# JWT Secret for session management
# Store in GCP Secret Manager
JWT_SECRET=<stored-in-secret-manager>

# Client URL for redirects
CLIENT_URL=https://apeyolo.com

# Database Configuration
# TODO: Set up PostgreSQL database
DATABASE_URL=<postgresql-connection-string>
